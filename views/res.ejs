        var isPositionFixed = ($el.css('position') == 'fixed');
        if ($(this).scrollTop() > 750 && !isPositionFixed){
            $('#menubar').css({'position': 'fixed', 'top': '0px','width' : '751.33px','z-index' : '10','margin-top' : '0px'});
        }
        if ($(this).scrollTop() < 750 && isPositionFixed)
        {
            $('#menubar').css({'position': 'static', 'top': '0px'});
        }
    });

