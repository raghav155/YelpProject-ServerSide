    $('.likebtn').click(function(){
        let userid = $(this).attr('userid')
        let revid =  $(this).attr('revid')
        let likebtn = $(this)
        let sibling = $(this).siblings()[0];
        let text = $(sibling).text()
        
    

        if(userid != undefined){

       let pr =  new Promise(function(resolve,reject){

       $.ajax({
                url : '/likerev',
                type : 'POST',
                data : {
                    userid : userid,
                    revid : revid
                },
            })

            resolve();
       }).then(function(){
           //let islikedb = $(this);
           let islikedb = likebtn.attr('isliked');
           let child = likebtn.children()[0];
           //console.log(child)
           if(islikedb === 'false'){
               $(child).css('color','red');
               likebtn.attr('isliked','true');

               //increase like by 1
               $(sibling).text(+text + 1);
           }else{
               $(child).css('color','#747576');
               likebtn.attr('isliked','false');

               //decrease like by 1
               $(sibling).text(+text - 1);
           }
    
       }).catch(function(){
           console.log('error occurred');
       })
            
        }else{
            console.log('hii')
            window.location = '/login';
        }
    })



